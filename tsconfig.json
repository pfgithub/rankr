{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "outDir": "./built",
        "target": "es2017",
        "module": "commonjs",
        "noImplicitAny": true,
        "lib": ["es2019"],
        "resolveJsonModule": true,
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "inlineSourceMap": true
    },
    "include": ["src/**/*", "test/**/*", "index.ts"]
}
